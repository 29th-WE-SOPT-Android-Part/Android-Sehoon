<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_Id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="449dp"
        android:text="깃허브 아이디"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:lineSpacingExtra="20dp"
        android:textColor="@color/Gray"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/rectangle_fill_pink"

        android:fontFamily="@font/noto_sans_kr"
        android:lineSpacingExtra="21dp"
        android:paddingLeft="140dp"
        android:paddingTop="12dp"
        android:paddingRight="138dp"
        android:paddingBottom="12dp"
        android:text="로그인"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_Pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="345dp"
        android:fontFamily="@font/noto_sans_kr"
        android:text="비밀번호"
        android:lineSpacingExtra="20dp"
        android:textColor="@color/Gray"
        android:textFontWeight="700"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_Id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="399dp"
        android:background="@drawable/selector_sample_text"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr"
        android:hint="깃허브 아이디를 입력해주세요."
        android:inputType="textPersonName"
        android:lineSpacingExtra="20dp"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingTop="13dp"
        android:paddingRight="155dp"
        android:paddingBottom="13dp"
        android:singleLine="false"
        android:textAllCaps="false"
        android:textColor="@color/Gray2"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482" />

    <EditText
        android:id="@+id/ed_Pw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="293dp"
        android:background="@drawable/selector_sample_text"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPersonName|textPassword"
        android:minHeight="48dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:paddingLeft="16dp"
        android:paddingRight="155dp"
        android:textColor="@color/Gray2"
        android:lineSpacingExtra="20dp"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="509dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_github" />

    <TextView
        android:id="@+id/tv_Question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="582dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="41dp"
        android:text="계정이 없으신가요?"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="400"
        android:textStyle="normal"
        android:textSize="12sp"
        android:lineSpacingExtra="17dp"
        android:textColor="@color/Gray3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Join1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="582dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="41dp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:textStyle="normal"
        android:textSize="12sp"
        android:lineSpacingExtra="17dp"
        android:textColor="@color/Gray3"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>