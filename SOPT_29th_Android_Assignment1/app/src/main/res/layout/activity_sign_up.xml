<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/Pink"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/noto_sans_kr"
        android:lineHeight="20dp"
        android:text="이름"
        android:textColor="@color/Gray"
        android:textFontWeight="700"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Join2" />

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_sample_text"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr"
        android:hint="이름을 입력해주세요."
        android:inputType="textPersonName"
        android:lineHeight="20dp"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="181dp"
        android:paddingBottom="12dp"
        android:singleLine="false"
        android:textAllCaps="false"
        android:textColor="@color/Gray2"
        android:textFontWeight="400"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <EditText
        android:id="@+id/ed_Id2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_sample_text"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr"
        android:hint="아이디를 입력해주세요."
        android:inputType="textPersonName"
        android:lineHeight="20dp"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingTop="13dp"
        android:paddingRight="126dp"
        android:paddingBottom="13dp"
        android:singleLine="false"
        android:textAllCaps="false"
        android:textColor="@color/Gray2"
        android:textFontWeight="400"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Id2" />

    <TextView
        android:id="@+id/tv_Id2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/noto_sans_kr"
        android:lineHeight="20dp"
        android:text="깃허브 아이디"
        android:textColor="@color/Gray"
        android:textFontWeight="700"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_name" />

    <EditText
        android:id="@+id/ed_Pw2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_sample_text"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr"
        android:hint="비밀번호를 입력해주세요."
        android:inputType="textPersonName|textPassword"
        android:lineHeight="20dp"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingTop="13dp"
        android:paddingRight="155dp"
        android:paddingBottom="13dp"
        android:singleLine="false"
        android:textAllCaps="false"
        android:textColor="@color/Gray2"
        android:textFontWeight="400"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Pw2" />

    <TextView
        android:id="@+id/tv_Pw2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/noto_sans_kr"
        android:lineHeight="20dp"
        android:text="비밀번호"
        android:textColor="@color/Gray"
        android:textFontWeight="700"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_Id2" />

    <TextView
        android:id="@+id/tv_Join2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/noto_sans_kr"
        android:lineHeight="36dp"
        android:text="회원가입"
        android:textColor="@color/Gray"
        android:textFontWeight="700"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Joined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/rectangle_fill_pink"
        android:fontFamily="@font/noto_sans_kr"
        android:lineHeight="21dp"
        android:paddingLeft="132dp"
        android:paddingTop="12dp"
        android:paddingRight="132dp"
        android:paddingBottom="12dp"
        android:text="회원가입"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>